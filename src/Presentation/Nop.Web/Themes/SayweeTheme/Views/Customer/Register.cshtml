@model RegisterModel
@using Nop.Core
@inject IThemeContext themeContext
@inject IWebHelper webHelper

@{
    Layout = "_ColumnsOne";
    NopHtml.AddTitleParts(T("PageTitle.Register").Text);
    NopHtml.AppendPageCssClassParts("html-registration-page");
    var themeName = await themeContext.GetWorkingThemeNameAsync();
    var loginUrl = Url.RouteUrl(NopRouteNames.General.LOGIN, new { returnUrl = Context.Request.Query["ReturnUrl"] }, webHelper.GetCurrentRequestProtocol());
}

@section Breadcrumb
{
    <!-- Breadcrumb Area Start -->
    <section class="mt-breadcrumb-area mt-breadcrumb-space p-relative"
             data-background="Themes/@(themeName)/Content/img/breadcurmb/breadcrumb-bg.jpg">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7">
                    <div class="mt-breadcrumb p-relative">
                        <h1 class="mt-breadcrumb-title">Register <span>Now</span></h1>
                        <div class="mt-breadcrumb-list">
                            <span class="active"><a href="@Url.RouteUrl(NopRouteNames.General.HOMEPAGE)">@T("Categories.Breadcrumb.Top")</a></span>
                            <span class="dvir">-</span>
                            <span><a href="#">Register Now</a></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="mt-breadcrumb-img text-end wow img-custom-anim-top" data-wow-duration="1.5s"
                         data-wow-delay="0.1s">
                        <img src="~/Themes/@(themeName)/Content/img/breadcurmb/breadcrumb.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Area End -->
}

<!-- Start Brand Title  -->
<section class="mtbreadcrumb__titleslide-area p-relative">
    <div class="swiper mt-brand-title-active">
        <div class="swiper-wrapper mt-slide-transtion">
            @for (var i = 0; i < 6; i++)
            {
                <div class="swiper-slide mt-brand-slide-element">
                    <div class="mtbreadcrumb__titleslide">
                        <h5 class="mtbreadcrumb__titleslide-title">
                            <span><i class="fa-solid fa-star-sharp"></i></span>
                            REGISTER NOW
                        </h5>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- End Brand Title  -->

<section class="mt-login-area pt-120 pb-140 p-relative z-index-1 fix">
    <div class="container">
        <div class="mt-login-wrapper" data-background="Themes/@(themeName)/Content/img/contact/login-bg.jpg">
            <div class="row align-items-start">
                <div class="col-xl-7 col-lg-8">
                    <div class="mt-login-wrap mr-30">
                        <div class="mt-login-top text-center mb-40">
                            <h3 class="mt-login-title">@T("Account.Register")</h3>
                            <span>Create Your Account</span>
                        </div>
                        <div class="mt-login-option">
                            @await Component.InvokeAsync(typeof(TopicBlockViewComponent), new { systemName = "Register" })
                            <div class="register_form">
                                @await Component.InvokeAsync(typeof(WidgetViewComponent), new { widgetZone = PublicWidgetZones.RegisterTop, additionalData = Model })
                                <div class="mt-login-input-wrapper mt-register-input-wrapper mb-20">
                                    <form asp-route="@NopRouteNames.Standard.REGISTER" asp-route-returnurl="@Context.Request.Query["ReturnUrl"]" method="post" autocomplete="off">
                                        <div asp-validation-summary="ModelOnly" class="message-error"></div>

                                        @* === Personal Details === *@
                                        <div class="register-section">
                                            <h5 class="register-section-title">@T("Account.YourPersonalDetails")</h5>
                                            <div class="row">
                                                @if (Model.GenderEnabled)
                                                {
                                                    <div class="col-12 mb-15">
                                                        <label class="register-field-label">@T("Account.Fields.Gender"):</label>
                                                        <div id="gender" class="gender">
                                                            <span class="male custom-radio">
                                                                <input class="custom-control-input" type="radio" asp-for="Gender" value="M" checked="@(Model.Gender == "M")" id="gender-male" />
                                                                <label class="forcheckbox custom-control-label" for="gender-male">@T("Account.Fields.Gender.Male")</label>
                                                            </span>
                                                            <span class="female custom-radio">
                                                                <input class="custom-control-input" type="radio" asp-for="Gender" value="F" checked="@(Model.Gender == "F")" id="gender-female" />
                                                                <label class="forcheckbox custom-control-label" for="gender-female">@T("Account.Fields.Gender.Female")</label>
                                                            </span>
                                                            @if (Model.NeutralGenderEnabled)
                                                            {
                                                                <span class="Neutral custom-radio">
                                                                    <input class="custom-control-input" type="radio" asp-for="Gender" value="N" checked="@(Model.Gender == "N")" id="gender-neutral" />
                                                                    <label class="forcheckbox custom-control-label" for="gender-neutral">@T("Account.Fields.Gender.Neutral")</label>
                                                                </span>
                                                            }
                                                        </div>
                                                    </div>
                                                }
                                                @if (Model.FirstNameEnabled)
                                                {
                                                    <div class="col-md-6">
                                                        <div class="mt-checkout-input">
                                                            <input asp-for="FirstName" placeholder="@T("Account.Fields.FirstName") *" />
                                                            <span class="field-validation-valid" asp-validation-for="FirstName"></span>
                                                        </div>
                                                    </div>
                                                }
                                                @if (Model.LastNameEnabled)
                                                {
                                                    <div class="col-md-6">
                                                        <div class="mt-checkout-input">
                                                            <input asp-for="LastName" placeholder="@T("Account.Fields.LastName") *" />
                                                            <span class="field-validation-valid" asp-validation-for="LastName"></span>
                                                        </div>
                                                    </div>
                                                }
                                                @if (Model.DateOfBirthEnabled)
                                                {
                                                    <div class="col-12">
                                                        <div class="mt-checkout-input">
                                                            <label class="register-field-label">@T("Account.Fields.DateOfBirth"):</label>
                                                            <nop-date-picker asp-day-name="@Html.NameFor(x => x.DateOfBirthDay)"
                                                                             asp-month-name="@Html.NameFor(x => x.DateOfBirthMonth)"
                                                                             asp-year-name="@Html.NameFor(x => x.DateOfBirthYear)"
                                                                             asp-begin-year="@(DateTime.Now.AddYears(-110))"
                                                                             asp-end-year="@(DateTime.UtcNow)"
                                                                             asp-selected-date="@Model.ParseDateOfBirth()" />
                                                        </div>
                                                    </div>
                                                }
                                                <div class="col-md-12">
                                                    <div class="mt-checkout-input">
                                                        <input asp-for="Email" placeholder="@T("Account.Fields.Email") *" />
                                                        <span class="field-validation-valid" asp-validation-for="Email"></span>
                                                    </div>
                                                </div>
                                                @if (Model.EnteringEmailTwice)
                                                {
                                                    <div class="col-md-12">
                                                        <div class="mt-checkout-input">
                                                            <input asp-for="ConfirmEmail" placeholder="@T("Account.Fields.ConfirmEmail") *" />
                                                            <span class="field-validation-valid" asp-validation-for="ConfirmEmail"></span>
                                                        </div>
                                                    </div>
                                                }
                                                @if (Model.UsernamesEnabled)
                                                {
                                                    <div class="col-md-12">
                                                        <div class="mt-checkout-input">
                                                            <input asp-for="Username" placeholder="@T("Account.Fields.Username") *" />
                                                            <span class="field-validation-valid" asp-validation-for="Username"></span>
                                                            @if (Model.CheckUsernameAvailabilityEnabled)
                                                            {
                                                                @await Html.PartialAsync("_CheckUsernameAvailability")
                                                            }
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>

                                        @* === Company Details === *@
                                        @if (Model.CompanyEnabled || Model.DisplayVatNumber)
                                        {
                                            <div class="register-section">
                                                <h5 class="register-section-title">@T("Account.CompanyDetails")</h5>
                                                <div class="row">
                                                    @if (Model.CompanyEnabled)
                                                    {
                                                        <div class="col-md-6">
                                                            <div class="mt-checkout-input">
                                                                <input asp-for="Company" placeholder="@T("Account.Fields.Company")" />
                                                                <span class="field-validation-valid" asp-validation-for="Company"></span>
                                                            </div>
                                                        </div>
                                                    }
                                                    @if (Model.DisplayVatNumber)
                                                    {
                                                        <div class="col-md-6">
                                                            <div class="mt-checkout-input">
                                                                <input asp-for="VatNumber" placeholder="@T("Account.Fields.VatNumber")" />
                                                                <span class="field-validation-valid" asp-validation-for="VatNumber"></span>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        }

                                        @* === Address === *@
                                        @if (Model.StreetAddressEnabled || Model.StreetAddress2Enabled || Model.ZipPostalCodeEnabled || Model.CityEnabled || Model.CountyEnabled || Model.CountryEnabled)
                                        {
                                            <div class="register-section">
                                                <h5 class="register-section-title">@T("Account.YourAddress")</h5>
                                                <div class="row">
                                                    @if (Model.StreetAddressEnabled)
                                                    {
                                                        <div class="col-md-12">
                                                            <div class="mt-checkout-input">
                                                                <input asp-for="StreetAddress" placeholder="@T("Account.Fields.StreetAddress")" />
                                                                <span class="field-validation-valid" asp-validation-for="StreetAddress"></span>
                                                            </div>
                                                        </div>
                                                    }
                                                    @if (Model.StreetAddress2Enabled)
                                                    {
                                                        <div class="col-md-12">
                                                            <div class="mt-checkout-input">
                                                                <input asp-for="StreetAddress2" placeholder="@T("Account.Fields.StreetAddress2")" />
                                                                <span class="field-validation-valid" asp-validation-for="StreetAddress2"></span>
                                                            </div>
                                                        </div>
                                                    }
                                                    @if (Model.CityEnabled)
                                                    {
                                                        <div class="col-md-6">
                                                            <div class="mt-checkout-input">
                                                                <input asp-for="City" placeholder="@T("Account.Fields.City")" />
                                                                <span class="field-validation-valid" asp-validation-for="City"></span>
                                                            </div>
                                                        </div>
                                                    }
                                                    @if (Model.ZipPostalCodeEnabled)
                                                    {
                                                        <div class="col-md-6">
                                                            <div class="mt-checkout-input">
                                                                <input asp-for="ZipPostalCode" placeholder="@T("Account.Fields.ZipPostalCode")" />
                                                                <span class="field-validation-valid" asp-validation-for="ZipPostalCode"></span>
                                                            </div>
                                                        </div>
                                                    }
                                                    @if (Model.CountyEnabled)
                                                    {
                                                        <div class="col-md-6">
                                                            <div class="mt-checkout-input">
                                                                <input asp-for="County" placeholder="@T("Account.Fields.County")" />
                                                                <span class="field-validation-valid" asp-validation-for="County"></span>
                                                            </div>
                                                        </div>
                                                    }
                                                    @if (Model.CountryEnabled)
                                                    {
                                                        <div class="col-md-6">
                                                            <div class="mt-checkout-input">
                                                                <select asp-for="CountryId" asp-items="Model.AvailableCountries"
                                                                        data-trigger="country-select"
                                                                        data-url="@(Url.RouteUrl(NopRouteNames.Ajax.GET_STATES_BY_COUNTRY_ID))"
                                                                        data-stateprovince="#@Html.IdFor(model => model.StateProvinceId)"
                                                                        data-loading="#states-loading-progress"></select>
                                                                <span class="field-validation-valid" asp-validation-for="CountryId"></span>
                                                            </div>
                                                        </div>
                                                    }
                                                    @if (Model.CountryEnabled && Model.StateProvinceEnabled)
                                                    {
                                                        <div class="col-md-6">
                                                            <div class="mt-checkout-input">
                                                                <select asp-for="StateProvinceId" asp-items="Model.AvailableStates"></select>
                                                                <span class="field-validation-valid" asp-validation-for="StateProvinceId"></span>
                                                                <span id="states-loading-progress" style="display: none;" class="please-wait">@T("Common.Wait")</span>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        }

                                        @* === Contact Information === *@
                                        @if (Model.PhoneEnabled || Model.FaxEnabled)
                                        {
                                            <div class="register-section">
                                                <h5 class="register-section-title">@T("Account.YourContactInformation")</h5>
                                                <div class="row">
                                                    @if (Model.PhoneEnabled)
                                                    {
                                                        <div class="col-md-6">
                                                            <div class="mt-checkout-input">
                                                                <input asp-for="Phone" placeholder="@T("Account.Fields.Phone") *" />
                                                                <span class="field-validation-valid" asp-validation-for="Phone"></span>
                                                            </div>
                                                        </div>
                                                    }
                                                    @if (Model.FaxEnabled)
                                                    {
                                                        <div class="col-md-6">
                                                            <div class="mt-checkout-input">
                                                                <input asp-for="Fax" placeholder="@T("Account.Fields.Fax")" />
                                                                <span class="field-validation-valid" asp-validation-for="Fax"></span>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        }

                                        @* === Newsletter === *@
                                        @if (Model.NewsletterEnabled && Model.NewsLetterSubscriptions.Count > 0)
                                        {
                                            <div class="register-section">
                                                <h5 class="register-section-title">@T("Account.SubscribeToNewsletter")</h5>
                                                <ul class="list-unstyled mb-0">
                                                    @for (int i = 0; i < Model.NewsLetterSubscriptions.Count; i++)
                                                    {
                                                        <li class="custom-checkbox mb-10">
                                                            <input type="hidden" asp-for="NewsLetterSubscriptions[i].TypeId" />
                                                            <input class="custom-control-input" type="checkbox" asp-for="NewsLetterSubscriptions[i].IsActive" />
                                                            <label class="custom-control-label" asp-for="NewsLetterSubscriptions[i].IsActive">@Model.NewsLetterSubscriptions[i].Name</label>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        }

                                        @* === Customer Attributes === *@
                                        @if (Model.CustomerAttributes.Count > 0)
                                        {
                                            <div class="register-section">
                                                <h5 class="register-section-title">@T("Account.Options")</h5>
                                                @await Html.PartialAsync("_CustomerAttributes", Model.CustomerAttributes)
                                            </div>
                                        }

                                        @* === Time Zone === *@
                                        @if (Model.AllowCustomersToSetTimeZone)
                                        {
                                            <div class="register-section">
                                                <h5 class="register-section-title">@T("Account.Preferences")</h5>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="mt-checkout-input">
                                                            <select asp-for="TimeZoneId" asp-items="Model.AvailableTimeZones"></select>
                                                            <span class="field-validation-valid" asp-validation-for="TimeZoneId"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                        @* === Password === *@
                                        <div class="register-section">
                                            <h5 class="register-section-title">@T("Account.YourPassword")</h5>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="mt-checkout-input p-relative">
                                                        <input asp-for="Password" placeholder="@T("Account.Fields.Password") *" />
                                                        <span class="password-toggle"><i class="fa-regular fa-eye-slash"></i></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="mt-checkout-input p-relative">
                                                        <input asp-for="ConfirmPassword" placeholder="@T("Account.Fields.ConfirmPassword") *" />
                                                        <span class="confirm-password-toggle"><i class="fa-regular fa-eye-slash"></i></span>
                                                    </div>
                                                </div>
                                            </div>
                                            @if (Model.DisplayCaptcha)
                                            {
                                                <nop-captcha />
                                            }
                                            @if (Model.HoneypotEnabled)
                                            {
                                                @Html.Raw(Html.GenerateHoneypotInput())
                                            }
                                        </div>

                                        @* === User Agreement === *@
                                        @if (Model.AcceptPrivacyPolicyEnabled || Model.GdprConsents.Count > 0)
                                        {
                                            <div class="register-section">
                                                @if (Model.AcceptPrivacyPolicyEnabled)
                                                {
                                                    <script asp-location="Footer">
                                                        $(function() {
                                                            $('#register-button').on('click', function() {
                                                                if ($('#accept-consent').is(':checked')) {
                                                                    return true;
                                                                } else {
                                                                    alert('@Html.Raw(JavaScriptEncoder.Default.Encode(T("Account.Fields.AcceptPrivacyPolicy.Required").Text))');
                                                                    return false;
                                                                }
                                                            });
                                                        });
                                                    </script>
                                                    <div class="custom-checkbox mb-15">
                                                        <input class="custom-control-input" id="accept-consent" type="checkbox" name="accept-consent" />
                                                        <label class="custom-control-label" for="accept-consent">@T("Account.Fields.AcceptPrivacyPolicy")</label>
                                                        @if (Model.AcceptPrivacyPolicyPopup)
                                                        {
                                                            <span class="read" id="read-privacyinfo">@T("Account.Fields.AcceptPrivacyPolicy.Read")</span>
                                                            <script asp-location="Footer">
                                                                $(function() {
                                                                    $('#read-privacyinfo').on('click', function(e) {
                                                                        displayPopupContentFromUrl(
                                                                            '@Url.RouteUrl(NopRouteNames.Ajax.TOPIC_POPUP, new { SystemName = "privacyinfo" })',
                                                                            '@T("Account.Fields.AcceptPrivacyPolicy")');
                                                                    });
                                                                });
                                                            </script>
                                                        }
                                                        else
                                                        {
                                                            <a class="read" id="read-privacyinfo" href="@await NopUrl.RouteTopicUrlAsync("privacyinfo")">@T("Account.Fields.AcceptPrivacyPolicy.Read")</a>
                                                        }
                                                    </div>
                                                }
                                                @if (Model.GdprConsents.Count > 0)
                                                {
                                                    foreach (var consent in Model.GdprConsents)
                                                    {
                                                        if (consent.IsRequired)
                                                        {
                                                            <script asp-location="Footer">
                                                                $(function() {
                                                                    $('#register-button').on('click', function() {
                                                                        if ($('#consent@(consent.Id)').is(':checked')) {
                                                                            return true;
                                                                        } else {
                                                                            alert('@Html.Raw(JavaScriptEncoder.Default.Encode(consent.RequiredMessage))');
                                                                            return false;
                                                                        }
                                                                    });
                                                                });
                                                            </script>
                                                        }
                                                        <div class="custom-checkbox mb-10">
                                                            <input class="custom-control-input" id="consent@(consent.Id)" type="checkbox" name="consent@(consent.Id)" checked="@consent.Accepted" />
                                                            <label class="custom-control-label" for="consent@(consent.Id)">@consent.Message</label>
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        }

                                        @* === Submit Button === *@
                                        <div class="mt-20">
                                            <button type="submit" name="register-button" id="register-button" class="mt-btn-2 w-100 register-next-step-button">
                                                <span>@T("Account.Register.Button")</span>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="mt-login-mail text-center p-relative mb-20">
                                <p>Or Register With</p>
                            </div>
                            <div class="mt-login-social mb-20 d-flex flex-wrap align-items-center justify-content-center">
                                <div class="external-authentication">
                                    @await Component.InvokeAsync(typeof(ExternalMethodsViewComponent), "ExternalAuthentication")
                                </div>
                            </div>
                            <div class="mt-login-account text-center mb-30">
                                <p>
                                    Already have account?
                                    <a href="@loginUrl"> Login</a>
                                </p>
                            </div>
                            @await Component.InvokeAsync(typeof(WidgetViewComponent), new { widgetZone = PublicWidgetZones.RegisterBottom, additionalData = Model })
                        </div>
                    </div>
                </div>

                <div class="col-xl-5 col-lg-4 d-none d-lg-block">
                    <div class="mt-login-thumb br-40 text-center text-lg-end wow img-custom-anim-top"
                         data-wow-duration="1.5s" data-wow-delay="0.1s" style="position: sticky; top: 120px;">
                        <img src="~/Themes/@(themeName)/Content/img/contact/login-thumb.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script asp-location="Footer">
    $(function () {
        // Password toggle
        var password = $("#@Html.IdFor(m => m.Password)");
        $(".password-toggle").on("click", function () {
            var type = password.attr("type") === "password" ? "text" : "password";
            password.attr("type", type);
            $(this).find("i").toggleClass("fa-eye-slash fa-eye");
        });
        // Confirm Password toggle
        var confirmPassword = $("#@Html.IdFor(m => m.ConfirmPassword)");
        $(".confirm-password-toggle").on("click", function () {
            var type = confirmPassword.attr("type") === "password" ? "text" : "password";
            confirmPassword.attr("type", type);
            $(this).find("i").toggleClass("fa-eye-slash fa-eye");
        });
    });
</script>

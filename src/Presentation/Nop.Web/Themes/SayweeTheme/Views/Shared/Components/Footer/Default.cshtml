
@model FooterModel

@using Nop.Core
@using Nop.Core.Domain.Tax
@using Nop.Core.Domain.Topics

@inject IWorkContext workContext 
@inject IThemeContext themeContext

@{

    var themeName = await themeContext.GetWorkingThemeNameAsync();
}
<!-- feature area Start -->
<section class="mtfeature__area mtfeature__bg pb-50 pt-60 fix">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-4">
                <div class="mtfeature__wrapper d-flex align-items-center">
                    <div class="mtfeature__icon">
                        <img src="~/Themes/@(themeName)/Content/img/feature/feature-1-1.jpg" alt="">
                    </div>
                    <div class="mtfeature__content">
                        <h5 class="mtfeature__title">@T("ContactUs.Feature1.Title", "Free Shipping")</h5>
                        <p>
                            @T("ContactUs.Feature1.Description", "shipping on your order. No extra charges for delivery.")
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4">
                <div class="mtfeature__wrapper d-flex align-items-center">
                    <div class="mtfeature__icon">
                        <img src="~/Themes/@(themeName)/Content/img/feature/feature-1-2.jpg" alt="">
                    </div>
                    <div class="mtfeature__content">
                        <h5 class="mtfeature__title">@T("ContactUs.Feature2.Title", "Secure Payments")</h5>
                        <p>
                            @T("ContactUs.Feature2.Description", "our financial information is protected")
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4">
                <div class="mtfeature__wrapper d-flex align-items-center">
                    <div class="mtfeature__icon">
                        <img src="~/Themes/@(themeName)/Content/img/feature/feature-1-3.jpg" alt="">
                    </div>
                    <div class="mtfeature__content">
                        <h5 class="mtfeature__title">@T("ContactUs.Feature3.Title", "24 Hour Support")</h5>
                        <p>
                            @T("ContactUs.Feature3.Description", "We're here to help whenever you need us.")
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4">
                <div class="mtfeature__wrapper d-flex align-items-center">
                    <div class="mtfeature__icon">
                        <img src="~/Themes/@(themeName)/Content/img/feature/feature-1-4.jpg" alt="">
                    </div>
                    <div class="mtfeature__content">
                        <h5 class="mtfeature__title">@T("ContactUs.Feature4.Title", "Best Prices & Offers")</h5>
                        <p>
                            @T("ContactUs.Feature4.Description", "Provides unbeatable deals on a wide range of products")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- feature area End -->

@model IList<ManufacturerBriefInfoModel>

@using Nop.Core.Domain.Catalog

@if (Model.Count > 0)
{
    <li>
        @if (Model.Count == 1)
        {
            <text>@T("Products.Manufacturer"):</text>
        }
        else
        {
            <text>@T("Products.Manufacturers"):</text>
        }


        @for (var i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <span>@item.Name</span>
            @* <a href="@(await NopUrl.RouteGenericUrlAsync<Manufacturer>(new { SeName = item.SeName }))">@item.Name</a> *@
            if (i != Model.Count - 1)
            {
                <text>,</text>
            }
        }

    </li>
}
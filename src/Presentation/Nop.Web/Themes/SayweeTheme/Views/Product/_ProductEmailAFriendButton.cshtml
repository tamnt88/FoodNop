@model ProductDetailsModel
@if (Model.EmailAFriendEnabled)
{
    var emailText = T("Products.EmailAFriend").Text;
    <div class="email-a-friend">
        <button type="button"
                class="button-2 email-a-friend-button mt-icon-action"
                aria-label="@emailText"
                title="@emailText"
                onclick="setLocation('@Url.RouteUrl(NopRouteNames.Standard.PRODUCT_EMAIL_FRIEND, new { productId = Model.Id })')">
            <i class="fa-regular fa-envelope"></i>
        </button>
    </div>
}

@model ProductDetailsModel
@* 
<link rel="stylesheet" href="~/lib_npm/magnific-popup/magnific-popup.css" />
<script asp-exclude-from-bundle="true" src="~/lib_npm/magnific-popup/jquery.magnific-popup.min.js" asp-location="Footer"></script>

 *@
@await Component.InvokeAsync(typeof(WidgetViewComponent), new { widgetZone = PublicWidgetZones.ProductDetailsBeforePictures, additionalData = Model })
<div class="col-lg-3 col-md-3 col-sm-3">
    <div class="mt-shop-details__tab-btn-box">
        <nav>
            @if (Model.PictureModels.Count > 1)
            {
                int picIndex = 0;
                <div class="nav nav-tab" id="nav-tab" role="tablist">

                    @foreach (var picture in Model.PictureModels)
                    {
                        <button class="nav-links @(picIndex == 0 ? "active" : "") " id="nav-@picIndex-tab" data-bs-toggle="tab"
                                data-bs-target="#nav-@picIndex" type="button" role="tab" aria-controls="nav-@picIndex"
                                aria-selected="true">
                            <img src="@picture.ThumbImageUrl" alt="@picture.AlternateText" title="@picture.Title">
                        </button>
                        picIndex++;
                    }
                </div>
            }
        </nav>
    </div>
</div>
<div class="col-lg-9 col-md-9 col-sm-9">
    <div class="mt-shop-details__tab-content-box mb-20">
        @if (Model.PictureModels.Count > 1)
        {
            int picIndex = 0;
            <div class="tab-content" id="nav-tabContent">
                @foreach (var picture in Model.PictureModels)
                {
                    <div class="tab-pane fade @(picIndex == 0 ? "show active" : "")" id="nav-@picIndex" role="tabpanel"
                         aria-labelledby="nav-@picIndex-tab">
                        <div class="mt-shop-details__tab-big-img">
                            <img src="@picture.FullSizeImageUrl" alt="@picture.AlternateText" title="@picture.Title">
                        </div>
                    </div>
                    picIndex++;
                }
            </div>
        }

    </div>
</div>

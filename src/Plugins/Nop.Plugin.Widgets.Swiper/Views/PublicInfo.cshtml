    <!-- Start Hero Area -->
    <section class="mthero__area mthero__2 p-relative fix">
        <div class="mthero__2-bg pt-120 pb-130" data-background="Themes/@(themeName)/Content/img/hero/hero-bg-2-1.jpg">
            <div class="mthero__shape-wrap">
                <div class="mthero__shape">
                    <img src="Themes/@(themeName)/Content/img/hero/shape-2-1.png" alt="">
                </div>
                <div class="mthero__shape-2">
                    <img src="Themes/@(themeName)/Content/img/hero/shape-2-2.png" alt="">
                </div>
                <div class="mthero__shape-3">
                    <img src="Themes/@(themeName)/Content/img/hero/shape-2-3.png" alt="">
                </div>
            </div>
            <div class="container">
                <div class="mthero__wrapper">
                    <div class="swiper mt-hero-2-active">
                        <div class="swiper-wrapper">
                            @foreach (var slide in Model.Slides)
                            {
                                @await Html.PartialAsync("~/Plugins/Widgets.Swiper/Views/_PublicInfo.Slide.cshtml", slide)
                            }
                        </div>
                    </div>
                    <div class="mthero-2-pagination"></div>
                </div>
            </div>
        </div>

    </section>
    <!-- End Hero Area -->
     
}

<script asp-location="Footer">
    var swiper6 = new Swiper(".nop-slider", {
      autoHeight: true,
        grabCursor: true,
        effect: "fade",
        lazy: true,
        @if (Model.Autoplay)
        {
                <text>
                autoplay: {
                    delay: @Model.AutoplayDelay
                },
                </text>
        }
        @if (Model.ShowPagination)
        {
                <text>
                pagination: {
                    el: ".swiper-pagination",
                    clickable: true,
                },
                </text>
        }
        @if (Model.ShowNavigation)
        {
                <text>
                navigation: {
                    nextEl: ".swiper-button-next",
                    prevEl: ".swiper-button-prev",
                },
                </text>
        }
    });
</script>